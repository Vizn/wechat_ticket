.hot-title{
  height: 32px;
  border-bottom: 1px solid #eee;
  padding-left: 20px;
}
.city-container{
  margin-top: 60px;
  height: 1000px;
}
.city-cell{
  margin-bottom: 30px;
}
.city-label {
  display: inline-block;
  font-size: 14px;
  height: 28px;
  width: 14.5%;
  line-height: 28px;
  color: #333;
  border: 1rpx solid #ccc;
  padding: 0px 10px;
  border-radius: 2px;
  margin: 10px;
  box-sizing: border-box;
  vertical-align: middle;
  text-align: center;
}

.search{
  top:0;
  left:0;
  position: fixed;
  z-index: 1;
  width: 100%;
  background:#eee;
}
.search input{
  height: 32px;
  text-align: center;
  border: 1px solid #fff;
  border-radius: 6px;
  background: #fff;
  margin: 4px 10px;
}

