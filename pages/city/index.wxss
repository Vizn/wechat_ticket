.hot-title{
  height: 32px;
  border-bottom: 1px solid #eee;
  padding-left: 20px;
  color: #999;
  font-size: 18px;
}
.city-container{
  margin-top: 60px;
}
.city-cell{
  padding-right: 5vw;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30px;
}
.city-cell .city-item{
  width: 20%;
  height: 28px;
  margin: 4px;
  text-align: center;
  background:#fff;
  font-size: 14px;
  line-height: 28px;
  color: #333;
  border: 1px solid #eee;
  border-radius: 4px;
}
.city-cell .city-item:hover{
  background:#6ed458;
  color: #fff;
}

.search{
  top:0;
  left:0;
  position: fixed;
  z-index: 1;
  width: 100%;
  background:#eee;
}
.search input{
  height: 32px;
  text-align: center;
  border: 1px solid #fff;
  border-radius: 6px;
  background: #fff;
  margin: 4px 10px;
}
.search-item{
  width:100%;
  height: 32px;
  line-height: 32px;
  background: #fff;
  color: #999;
  text-align: center;
  border-bottom: 1px solid #eee;
}